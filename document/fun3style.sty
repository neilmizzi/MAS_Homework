%% "physics" packages
% Physics symbols: using options to make vectors bold and load the SIunitx package
	\RequirePackage{physics, siunitx}
		
    % SI units set-up
	    \sisetup{separate-uncertainty = true}
    	\sisetup{multi-part-units = single}
    	\sisetup{load-configurations = abbreviations}
    	\sisetup{unitspace = { } \cdot { } }
    	\sisetup{per-mode = symbol}
    % Next I define some additional units for time
		\DeclareSIUnit\y{y}
		\DeclareSIUnit\year{y}
		\DeclareSIUnit\min{\minute}
		\DeclareSIUnit\h{h}
		\DeclareSIUnit\hour{h}

	% Here I define commands to make vectors look the way I want them to (this is my personal preference for vectors)
		\renewcommand{\vector}[1]{\overrightarrow{#1}}
		\renewcommand{\vec}[1]{\boldsymbol{#1}}
		\newcommand{\unitvec}[1]{\,\boldsymbol{\hat{#1}}}
		
	% \dd command is always too close the previous term, so I'm going to add a space in front of it
	    %\renewcommand{\dd}{\,\dd}
		
	% \ensuremath allows me to use these commands outside the math environment and LaTeX will automatically put them in a math environment, I going to define some useful shortcuts for unitvectors that I can use in either the math environment or the regular text environment
		\newcommand{\unitx}{\ensuremath{\unitvec{x}}}
		\newcommand{\unity}{\ensuremath{\unitvec{y}}}
		\newcommand{\unitz}{\ensuremath{\unitvec{z}}}
		\newcommand{\uniti}{\ensuremath{\unitvec{\imath}}}
		\newcommand{\unitj}{\ensuremath{\unitvec{\jmath}}}
		\newcommand{\unitk}{\ensuremath{\unitvec{k}}}
		\newcommand{\unitr}{\ensuremath{\unitvec{r}}}
		\newcommand{\unitn}{\ensuremath{\unitvec{n}}}
		\newcommand{\unitphi}{\ensuremath{\unitvec{\phi}}}
		\newcommand{\unittheta}{\ensuremath{\unitvec{\theta}}}
		\newcommand{\unitrho}{\ensuremath{\unitvec{\rho}}}
	
